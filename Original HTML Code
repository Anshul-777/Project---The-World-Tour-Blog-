<!-- Login Modal -->
<div class="modal" id="login-modal">
    <div class="modal-content">
        <div class="close-modal" id="close-login-modal"><i class="fas fa-times"></i></div>
        <h3 class="modal-title">Login to Your Account</h3>
        <form class="login-form">
            <div class="form-group">
                <label for="login-email">Email Address</label>
                <input type="email" id="login-email" placeholder="Enter your email">
                <div class="form-group">
                    <label for="login-password">Password</label>
                    <input type="password" id="login-password" placeholder="Enter your password">
                </div>
                <div class="remember-me">
                    <input type="checkbox" id="remember">
                    <label for="remember">Remember me</label>
                </div>
                <button type="submit" class="btn">Login</button>
                <div class="create-account-link">
                    <p>Don't have an account? <a href="#" id="show-signup">Create one now</a></p>
                </div>
            </form>
        </div>
    </div>

    <!-- Signup Modal -->
    <div class="modal" id="signup-modal">
        <div class="modal-content">
            <div class="close-modal" id="close-signup-modal"><i class="fas fa-times"></i></div>
            <h3 class="modal-title">Create a New Account</h3>
            <form class="login-form">
                <div class="form-group">
                    <label for="signup-name">Full Name</label>
                    <input type="text" id="signup-name" placeholder="Enter your full name">
                </div>
                <div class="form-group">
                    <label for="signup-email">Email Address</label>
                    <input type="email" id="signup-email" placeholder="Enter your email">
                </div>
                <div class="form-group">
                    <label for="signup-password">Password</label>
                    <input type="password" id="signup-password" placeholder="Create a password">
                </div>
                <div class="form-group">
                    <label for="signup-confirm">Confirm Password</label>
                    <input type="password" id="signup-confirm" placeholder="Confirm your password">
                </div>
                <button type="submit" class="btn">Sign Up</button>
                <div class="create-account-link">
                    <p>Already have an account? <a href="#" id="show-login">Login here</a></p>
                </div>
            </form>
        </div>
    </div>

    <script>
        // DOM Elements
        const themeToggle = document.getElementById('theme-toggle');
        const loginBtn = document.getElementById('login-btn');
        const loginModal = document.getElementById('login-modal');
        const signupModal = document.getElementById('signup-modal');
        const closeLoginModal = document.getElementById('close-login-modal');
        const closeSignupModal = document.getElementById('close-signup-modal');
        const showSignup = document.getElementById('show-signup');
        const showLogin = document.getElementById('show-login');
        const prevArrow = document.getElementById('prev-arrow');
        const nextArrow = document.getElementById('next-arrow');
        const carousel = document.getElementById('carousel');
        const sections = document.querySelectorAll('.section');
        const featureBoxes = document.querySelectorAll('.feature-box');
        const navItems = document.querySelectorAll('.nav-item');
        const pageContents = document.querySelectorAll('.page-content');
        const homeLink = document.getElementById('home-link');
        const backToTop = document.getElementById('back-to-top');
        const backToBlog = document.getElementById('back-to-blog');
        const articleBoxes = document.querySelectorAll('.article-box');
        const articleListPages = document.querySelectorAll('.article-list-page');
        const backToArticles = document.querySelectorAll('[data-back="articles"]');
        const blogLinks = document.querySelectorAll('[data-blog]');
        const accordionItems = document.querySelectorAll('.accordion-item');

        // Theme Toggle
        themeToggle.addEventListener('click', () => {
            document.body.classList.toggle('dark-mode');
            if (document.body.classList.contains('dark-mode')) {
                themeToggle.innerHTML = '<i class="fas fa-moon"></i>';
                localStorage.setItem('theme', 'dark');
            } else {
                themeToggle.innerHTML = '<i class="fas fa-sun"></i>';
                localStorage.setItem('theme', 'light');
            }
        });

        // Check for saved theme preference
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme === 'dark') {
            document.body.classList.add('dark-mode');
            themeToggle.innerHTML = '<i class="fas fa-moon"></i>';
        }

        // Modal Handling
        loginBtn.addEventListener('click', () => {
            loginModal.classList.add('active');
        });

        closeLoginModal.addEventListener('click', () => {
            loginModal.classList.remove('active');
        });

        closeSignupModal.addEventListener('click', () => {
            signupModal.classList.remove('active');
        });

        showSignup.addEventListener('click', (e) => {
            e.preventDefault();
            loginModal.classList.remove('active');
            setTimeout(() => {
                signupModal.classList.add('active');
            }, 300);
        });

        showLogin.addEventListener('click', (e) => {
            e.preventDefault();
            signupModal.classList.remove('active');
            setTimeout(() => {
                loginModal.classList.add('active');
            }, 300);
        });

        // Close modal when clicking outside
        window.addEventListener('click', (e) => {
            if (e.target === loginModal) {
                loginModal.classList.remove('active');
            }
            if (e.target === signupModal) {
                signupModal.classList.remove('active');
            }
        });

        // Carousel Functionality
        let currentPosition = 0;
        const cardWidth = 33.333; // percentage width of each card
        const cardsCount = document.querySelectorAll('.blog-card').length;
        const maxPosition = Math.max(0, cardsCount - 3);

        function updateCarousel() {
            carousel.style.transform = `translateX(-${currentPosition * cardWidth}%)`;
        }

        nextArrow.addEventListener('click', () => {
            if (currentPosition < maxPosition) {
                currentPosition++;
                updateCarousel();
            }
        });

        prevArrow.addEventListener('click', () => {
            if (currentPosition > 0) {
                currentPosition--;
                updateCarousel();
            }
        });

        // Automatic carousel movement
        let autoScrollInterval = setInterval(() => {
            if (currentPosition < maxPosition) {
                currentPosition++;
            } else {
                currentPosition = 0;
            }
            updateCarousel();
        }, 5000);

        // Pause auto-scroll when hovering over carousel
        carousel.addEventListener('mouseenter', () => {
            clearInterval(autoScrollInterval);
        });

        carousel.addEventListener('mouseleave', () => {
            autoScrollInterval = setInterval(() => {
                if (currentPosition < maxPosition) {
                    currentPosition++;
                } else {
                    currentPosition = 0;
                }
                updateCarousel();
            }, 5000);
        });

        // Page Navigation
        function showPage(pageId) {
            // Hide all pages
            pageContents.forEach(page => {
                page.classList.remove('active');
            });
            
            // Show selected page
            document.getElementById(pageId).classList.add('active');
            
            // Update active nav item
            navItems.forEach(item => {
                if (item.dataset.page === pageId.split('-')[0]) {
                    item.classList.add('active');
                } else {
                    item.classList.remove('active');
                }
            });
            
            // Scroll to top
            window.scrollTo(0, 0);
        }

        // Set up navigation click handlers
        navItems.forEach(item => {
            item.addEventListener('click', (e) => {
                e.preventDefault();
                const pageName = item.dataset.page;
                showPage(`${pageName}-page`);
            });
        });

        // Home link
        homeLink.addEventListener('click', (e) => {
            e.preventDefault();
            showPage('home-page');
        });

        // Blog post links
        blogLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                showPage('blog-post-page');
                // In a real implementation, we would load the specific blog content here
                // For this demo, we're just showing the Raigad post as an example
                document.getElementById('blog-post-page').scrollIntoView();
            });
        });

        // Back to blog button
        backToBlog.addEventListener('click', (e) => {
            e.preventDefault();
            showPage('blog-page');
        });

        // Article navigation
        articleBoxes.forEach(box => {
            box.addEventListener('click', () => {
                document.getElementById('articles-grid-section').style.display = 'none';
                document.getElementById(`${box.dataset.article}-articles`).style.display = 'block';
            });
        });

        backToArticles.forEach(button => {
            button.addEventListener('click', (e) => {
                e.preventDefault();
                articleListPages.forEach(page => {
                    page.style.display = 'none';
                });
                document.getElementById('articles-grid-section').style.display = 'block';
            });
        });

        // Accordion functionality
        accordionItems.forEach(item => {
            const header = item.querySelector('.accordion-header');
            header.addEventListener('click', () => {
                item.classList.toggle('active');
            });
        });

        // Scroll Animation
        function checkVisibility() {
            sections.forEach((section) => {
                const sectionTop = section.getBoundingClientRect().top;
                const windowHeight = window.innerHeight;
                if (sectionTop < windowHeight * 0.85) {
                    section.classList.add('visible');
                }
            });

            featureBoxes.forEach((box, index) => {
                const boxTop = box.getBoundingClientRect().top;
                const windowHeight = window.innerHeight;
                if (boxTop < windowHeight * 0.85) {
                    setTimeout(() => {
                        box.classList.add('visible');
                    }, index * 150);
                }
            });
        }

        // Back to Top Button
        window.addEventListener('scroll', () => {
            if (window.pageYOffset > 300) {
                backToTop.classList.add('visible');
            } else {
                backToTop.classList.remove('visible');
            }
        });

        backToTop.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });

        // Form submission
        document.getElementById('support-form').addEventListener('submit', (e) => {
            e.preventDefault();
            alert('Thank you for your message! Our team will get back to you soon.');
            e.target.reset();
        });

        // Initialize visibility check
        checkVisibility();
        window.addEventListener('scroll', checkVisibility);

        // Show home page by default
        showPage('home-page');
    </script>
</body>
</html>
